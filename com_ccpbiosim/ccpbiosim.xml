<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0" method="upgrade">
  <name>com_ccpbiosim</name>
  <creationDate>2026-01-13</creationDate>
  <copyright>2025 CCPBioSim Team</copyright>
  <license>MIT</license>
  <author>James Gebbie-Rayet</author>
  <authorEmail>james.gebbie@gmail.com</authorEmail>
  <authorUrl>https://github.com/jimboid</authorUrl>
  <version>v0.0.7</version>
  <description>A CCPBioSim plugin for custom organisation features.</description>
  <namespace path="src">Ccpbiosim\Component\Ccpbiosim</namespace>
  <install>
    <!-- Runs on install -->
    <sql>
      <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
    </sql>
  </install>
  <update>
    <!-- Runs on update -->
    <schemas>
      <schemapath type="mysql">sql/updates</schemapath>
    </schemas>
  </update>
  <uninstall>
    <!-- Runs on uninstall -->
    <sql>
      <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    </sql>
  </uninstall>
  <files folder="site">
    <folder>src</folder>
    <folder>forms</folder>
    <folder>tmpl</folder>
  </files>
  <media destination="com_ccpbiosim" folder="media">
    <folder>css</folder>
    <folder>js</folder>
    <filename>joomla.asset.json</filename>
  </media>
  <languages folder="site/languages">
    <language tag="en-GB">en-GB/com_ccpbiosim.ini</language>
  </languages>
  <administration>
    <menu>COM_CCPBIOSIM</menu>
    <submenu>
      <menu link="option=com_ccpbiosim&amp;view=coreteammembers" view="coreteammembers" alt="Ccpbiosim/Coreteammembers">COM_CCPBIOSIM_TITLE_CORETEAMMEMBERS</menu>
      <menu link="option=com_ccpbiosim&amp;view=managementteams" view="managementteams" alt="Ccpbiosim/Managementteams">COM_CCPBIOSIM_TITLE_MANAGEMENTTEAMS</menu>
      <menu link="option=com_ccpbiosim&amp;view=eventcategories" view="eventcategories" alt="Ccpbiosim/Eventcategories">COM_CCPBIOSIM_TITLE_EVENTCATEGORIES</menu>
      <menu link="option=com_ccpbiosim&amp;view=events" view="events" alt="Ccpbiosim/Events">COM_CCPBIOSIM_TITLE_EVENTS</menu>
    </submenu>
    <files folder="administrator">
      <filename>access.xml</filename>
      <filename>config.xml</filename>
      <folder>forms</folder>
      <folder>src</folder>
      <folder>tmpl</folder>
      <folder>services</folder>
      <folder>presets</folder>
      <folder>sql</folder>
    </files>
    <languages folder="administrator/languages">
      <language tag="en-GB">en-GB/com_ccpbiosim.ini</language>
      <language tag="en-GB">en-GB/com_ccpbiosim.sys.ini</language>
    </languages>
  </administration>
  <config>
    <fields name="params">
      <fieldset name="component">
        <field name="save_history" default="0"/>
      </fieldset>
    </fields>
  </config>
  <plugins>
    </plugins>
  <updateservers>
    <server type="extension" priority="1" name="com_ccpbiosim">https://ccpbiosim.github.io/com_ccpbiosim/update.xml</server>
  </updateservers>
</extension>
